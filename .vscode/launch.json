{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated .venv)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Pytest: Debug tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-q"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Docs: sphinx-build (debug)",
            "type": "python",
            "request": "launch",
            "module": "sphinx",
            "args": [
                "-b",
                "html",
                "docs",
                "docs/_build/html"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Docs: sphinx-autobuild (debug)",
            "type": "python",
            "request": "launch",
            "module": "sphinx_autobuild",
            "args": [
                "docs",
                "docs/_build/html"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Web UI: Uvicorn (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "bjjsim.web.app:create_app",
                "--factory",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Web UI: Quick Serve (PowerShell)",
            "type": "ms-vscode.powershell.PowerShellLauncher",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "script": "${workspaceFolder}/scripts/serve-quick.ps1",
            "args": [],
            "createTemporaryIntegratedConsole": true
        }
    ]
}
